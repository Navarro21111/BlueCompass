<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Violeta1"
    tools:context=".Menu">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMenuPlaya"
        android:layout_width="match_parent"
        android:layout_height="442dp"
        android:onClick="acceder" />

    <EditText
        android:id="@+id/etConsultarPlaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvMenuPlaya"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/et_introducir_playa"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnConsultarM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="consultarPlaya"
        android:text="@string/btn_consultar_p" />

</RelativeLayout>