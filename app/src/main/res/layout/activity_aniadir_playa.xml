<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Violeta1"
    tools:context=".AniadirPlaya">

    <EditText
        android:id="@+id/etNombreAñadir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/et_aniadir_nombre_playa"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spProvincia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNombreAñadir"

        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/etDescripcionCP"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_alignParentTop="true"

        android:layout_marginTop="144dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnSubirFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/animacion_cambio_color_boton"
        android:onClick="selccionarFoto"
        android:text="Button" />

</RelativeLayout>